<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Teacher</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.subject.name %></td>
        <td><%= section.start_time.strftime('%d %b %Y, %H:%M') %></td>
        <td><%= section.end_time.strftime('%d %b %Y, %H:%M') %></td>
        <td><%= section.teacher.first_and_last_name %></td>
        <td><%= section.classroom.name %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
